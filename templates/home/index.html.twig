{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
    <div class="alert alert-light">
        <h1 class="alert-title">Nos produits phares</h1>
    </div>
    <div class="row">
        {% for p in featured %}
            <div class="col-md-3">
                <img src="{{ p.image }}" alt="{{ p.title | escape }}" class="img-fluid rounded">
                <h3>{{ p.title }}
                    ({{ p.price / 100 }})</h3>
                <p>{{ p.introduction }}</p>
                <hr>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-search"></i>Plus d'info
                </a>
                <a href="#" class="btn btn-success">
                    <i class="fas fa-shopping-cart"></i>Ajouter
                </a>
            </div>
        {% endfor %}
    </div>
    {% for c in categories %}
        <div class="alert alert-light">
            <h2 class="alert-title">{{ c.title }}</h2>
            <div class="row">
                {% for p in c.products %}
                    <div class="col-md-3 my-3">
                        <img src="{{ p.image }}" alt="{{ p.title | escape }}" class="img-fluid rounded">
                        <h3>{{ p.title }}
                            ({{ p.price / 100 }})</h3>
                        <p>{{ p.introduction }}</p>
                        <hr>
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-search"></i>Plus d'info
                        </a>
                        <a href="#" class="btn btn-success">
                            <i class="fas fa-shopping-cart"></i>Ajouter
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
